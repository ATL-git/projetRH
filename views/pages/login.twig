{% extends "../base.twig" %}

{% block style %}
    <link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block main %}
    <section class="login-container">
        <h2>Formulaire de connexion</h2>

        <form action="/login" method="post">
            {% if error %}
                <p class="error">{{ error }}</p>
            {% endif %}
            <div>
                <label for="mail">Email :</label>
                <input type="email" id="mail" name="mail" placeholder="entrez un mail">
            </div>
            <div>
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="password" placeholder="entrez un mot de passe">
            </div>
            <div>
                <button type="submit">Se connecter</button>
            </div>
        </form>
        <p>Vous n'avez pas de compte ? <a class="registerlink" href="/register">Inscrivez-vous</a></p>
    </section>
{% endblock %}


{% extends "../base.twig" %}

{% block style %}
    <link rel="stylesheet" href="/assets/css/register.css">
{% endblock %}

{% block main %}
    <section class="register-container">
        <h2>Formulaire d'inscription</h2>

        <form action="/register" method="post">
        {% if error %}
        <p class="error">{{ error }}</p>
        {% endif %}
            <div>
                <label for="name">Nom de la société :</label>
                <input type="text" id="name" name="name" placeholder="Entrez un nom">
            </div>
            <div>
                <label for="siretNumber">Numéro de SIRET :</label>
                <input type="text" id="siretNumber" name="siretNumber" placeholder="Entrez un numéro de SIRET">
            </div>
            <div>
                <label for="mail">Email :</label>
                <input type="email" id="mail" name="mail" placeholder="Entrez un email">
            </div>
            <div>
                <label for="directorName">Nom du directeur :</label>
                <input type="text" id="directorName" name="directorName" placeholder="Entrez le nom du directeur">
            </div>
            <div>
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="password" placeholder="Entrez un mot de passe">
            </div>
            <div>
                <button type="submit">S'enregistrer</button>
            </div>
        </form>
        <p>Vous avez déjà un compte ? <a class"linkCO" href="/login">Connectez-vous</a></p>
    </section>
{% endblock %}
